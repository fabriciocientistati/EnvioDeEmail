@model ContactViewModel

@{
    ViewData["Title"] = "Contato";
}

<h1>Contato</h1>

@if (ViewData["message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["message"]
    </div>
}

<form asp-action="SendContact" method="post" autocomplete="off">
    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" type="text">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" type="email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Message"></label>
        <input class="form-control" asp-for="Message" type="textarea">
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-lg btn-primary" value="Enviar">
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}